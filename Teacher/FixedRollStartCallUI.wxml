<page>
  <!--设置左上角的蓝色板-->
  <view class="blueBoardView">
    <image src="../images/blueboard.png" class='blueBoardIcon' />
  </view>


  <!--班级1 的字样-->
  <view class='classNameView'>
    {{classInfo.name}}
  </view>

  <!--学生总数：40 的字样-->
  <view class='studentSumView'>
    学生总数: {{classInfo.numStudent}}
  </view>

  <!--细线，hr不好设置css，用一个高度很小的view来代替-->
  <view class="hrView">
  </view>

  <!--已签到的学生以及那个icon,当签到开始及结束时，这个部分在中央。当签到开始后结束前，这部分在左边，见.studentNum2。-->
   <view class="studentNum">
    <image src="../images/users.png" class="usersIcon"/>
    已签到学生: {{callingStatus.numPresent}}/{{classInfo.numStudent}}
  </view>



 

  <!--下面是button，分为BigBtn和SmallBnt,只有正在签到时 
的 签到名单按钮 是SmallBnt。 当使用greyBigBtn的时候要加
上提示语。-->
  <view>
    <button type="button" class="blueBigBtn" bindtap="FixedRollCallUI">
      开始签到
    </button>
  </view>

  <view>
    <button type="button" class="greenBigBtn" bindtap="FixedGroupInfoUI">
      查看分组
    </button>
  </view>
</page>